<div class="container-fluid">

<div class="row" style="margin-top: 50px;">
	
	<div class="col-md-5" id="map-canvas">
	</div>
	
	<div class="col-md-7">
		
		<div class= "row filter-div">
			<div class="col-md-3 filter-header">
				Dates:
			</div>
			  
			<div class="col-md-9">
					<input id="start_date" type="date" name="start_date" class="search-bar" value="<%= filters["start_date"] %>">
					<input id="end_date" type="date" name="end_date" class="search-bar" value="<%= filters["end_date"] %>">
					
					<select id="guest_num" class="search-bar" name="guest_num">
						<% for (var i = 1; i < 6; i ++) { %>
							<% if (filters["guest_num"] === ""+i) { %>
								<option selected value="<%= i %>"><%= i %> Guests</option>
							<% } else { %>
							  <option value="<%= i %>"><%= i %> Guests</option>
								<% } %>
					  <% } %>
					</select>
			</div>
		</div>
			
		<div class= "row filter-div">
			<div class="col-md-3 filter-header">
				Cuisine:
			</div>
			  
			<div class="col-md-9">
				<select id="tag" class="search-bar" name="tag">
					<% if (!filters["tag"]) { %>
					  <option value="" disabled selected>What are you craving?</option>
					<% } %>
					<% for (var item in cuisines) { %>
						<% if (filters["tag"] === cuisines[item]) { %>
							<option selected value="<%= cuisines[item].toLowerCase() %>"><%= cuisines[item] %></option>
						<% } else { %>
						  <option value="<%= cuisines[item].toLowerCase() %>"><%= cuisines[item] %></option>
							<% } %>
				  <% } %>
				</select>
			</div>
		</div>
			
		<div class= "row filter-div">
			<div class="col-md-3 filter-header">
				Price Range:
			</div>
			  
			<div class="col-md-9">
				<div id="price" class="slider"></div>
				<div style="margin-top: 5px;">
					<span id="min-price" style="float: left; margin-left: -7px;">$0</span>
					<span id="max-price" style="float: right;">$1000+ </span>
				</div>
			</div>
		</div>
			
		<div class="row filter-div">
			<div class="col-md-3 filter-header">
				Current Filters:
			</div>
			<div class="col-md-9"> <!-- style="width: 440px; margin-left: 180px;"> -->
				<% for (var item in filters) { %>
					<% if (item === "start_date" || item === "end_date") { %>
						<% continue %>
					<% } %>
					<div class="search-bar current-filter">
						<b style="font-size: 10px;">
							<% if (item === "location") { %>
								<span class="glyphicon glyphicon-map-marker"> </span>
							<% } else if (item === "tag") { %>
							  <span class="glyphicon glyphicon-cutlery"> </span>
							<% } else if (item === "guest_num") { %>
								<span class="glyphicon glyphicon-user"> </span>
							<% } else if (item === "start_date" || item === "end_date") { %>
								<span class="glyphicon glyphicon-calendar"> </span>
							<% } else if (item === "guest_num") { %>
								<span class="glyphicon glyphicon-calendar"> </span>
							<% } %>
						</b>
						<br>
						<%= filters[item] %>
					</div>
					<% } %>
				</div>
			</div>
				
			<div class="row filter-div matches-bar">
				<div class="col-md-3 filter-header">
					<%= meals.length %> Matches
					<span class="glyphicon glyphicon-chevron-down"></span>
				</div>
			</div>
			
			<!--listings -->
			
			<div class="row">
				<div class="col-xs-3 col-sm-offset-1 meal-info" style="background-image: url('https://s3-us-west-1.amazonaws.com/yumster/seafood.jpg');">
					<div class="host-profile">
						<img src="https://s3-us-west-1.amazonaws.com/yumster/host1.jpg" class= "host-pic">
						<span style="float: left; margin-left: 5px;">
							Natasha R's
						</span>
					</div>
					<div class="meal-blurb">
						<p class="tag">SEAFOOD<p>
							<p> Under the Sea <p>
								<p style="font-size: 10px;">
									<span style="float: left;"> @Mission </span>
									<span style="float: right;">$25/p </span>
								</p>
							</div>
						</div>
		
						<div class="col-xs-3 meal-info" style="background-image: url('https://s3-us-west-1.amazonaws.com/yumster/quiche.jpg');">
							<div class="host-profile">
								<img src="https://s3-us-west-1.amazonaws.com/yumster/host2.jpg" class= "host-pic">
								<span style="float: left; margin-left: 5px;">
									Andrei T's
								</span>
							</div>
							<div class="meal-blurb">
								<p class="tag">EUROPEAN<p>
									<p> French Breakfast <p>
										<p style="font-size: 10px;">
											<span style="float: left;"> @Castro </span>
											<span style="float: right;">$20/p </span>
										</p>
									</div>
			
								</div>
		
								<div class="col-xs-3 meal-info" style="background-image: url('https://s3-us-west-1.amazonaws.com/yumster/philly-cheese.jpg');">
									<div class="host-profile">
										<img src="https://s3-us-west-1.amazonaws.com/yumster/host3.jpg" class= "host-pic">
										<span style="float: left; margin-left: 5px;">
											Marina Z's
										</span>
									</div>
									<div class="meal-blurb">
										<p class="tag">AMERICAN<p>
											<p> Philly Style <p>
												<p style="font-size: 10px;">
													<span style="float: left;"> @Japantown </span>
													<span style="float: right;">$30/p </span>
												</p>
											</div>
										</div>
									</div>
		
								</div>
	
							</div>
</div>							