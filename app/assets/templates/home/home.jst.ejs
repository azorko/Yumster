<div class="container-fluid">

	<!--Carousel -->

	<div class="row">
		<div class="col-md-12" style="padding-right: 0; padding-left: 0;">
		<div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
			<!-- Indicators -->
			<ol class="carousel-indicators">
				<li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
				<li data-target="#carousel-example-generic" data-slide-to="1"></li>
				<li data-target="#carousel-example-generic" data-slide-to="2"></li>
			</ol>

			<!-- Wrapper for slides -->
			<div class="carousel-inner" role="listbox" max-width="600" max-height="400">
				<div class="item active" >
					<img src="https://s3-us-west-1.amazonaws.com/yumster/rsz_thai_food.jpg" id="carousel-img">
					<div class="carousel-caption">
						<h4> Join a community of food lovers and cooks. Experience unique meals together.</h4>
					</div>
				</div>
		
				<div class="item">
					<img src="https://s3-us-west-1.amazonaws.com/yumster/rsz_candle-light.jpg" id="carousel-img">
					<div class="carousel-caption">
						<h4> Join a community of food lovers and cooks. Experience unique meals together.</h4>
					</div>
				</div>
		
				<div class="item">
					<img src="https://s3-us-west-1.amazonaws.com/yumster/rsz_mexican.jpg" id="carousel-img">
					<div class="carousel-caption">
						<h4> Join a community of food lovers and cooks. Experience unique meals together.</h4>
					</div>
				</div>
		
			</div>

			<!-- Controls -->
			<a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
				<span class="glyphicon glyphicon-chevron-left"></span>
				<span class="sr-only">Previous</span>
			</a>
			<a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
				<span class="glyphicon glyphicon-chevron-right"></span>
				<span class="sr-only">Next</span>
			</a>
		</div>
		</div>
	</div>
	
	<!--Search Bar -->
	<div class="row search-div">
		<div class="col-md-10 col-md-offset-1">
			<form>
		    <input type="hidden" id="lat-search" name="lat">
				<input type="hidden" id="lng-search" name="lng">
				<select class="search-bar" name="tag">
					<option value="" disabled selected>What are you craving?</option>
					<% for (var item in cuisines) { %>
						<option value="<%= cuisines[item] %>"><%= cuisines[item] %></option>
					<% } %>
				</select>
		
				<input id="location-search" type="text" name="location" class="search-bar" placeholder="Location" style="width: 230px;" data-toggle="tooltip" data-placement="top" title="Get started by searching for meals in San Francisco, Mountain View, Cupertino, or Sunnyvale. ">
		    <input placeholder="Start Date" name="start_date" class="search-bar" class="textbox-n" type="text" onfocus="(this.type='date')" data-toggle="tooltip" data-placement="top" title="Try searching for dates in the current month.">
				<input placeholder="End Date" name="end_date" class="search-bar" class="textbox-n" type="text" onfocus="(this.type='date')">
			
				<select class="search-bar" name="guest_num">
					<option value="1" selected>1 Guest</option>
					<option value="2">2 Guests</option>
					<option value="3">3 Guests</option>
					<option value="4">4 Guests</option>
					<option value="5">5+ Guests</option>
				</select>
					
				<button type="submit" id="button-search" class="search-button btn btn-default" >Search </button>
		
			</form>
		</div>
	</div>
	
	<!--Explore your Neighborhood Header -->
	
	<div class="row" ><!-- style="margin-top: 15px;"> -->
		<div class="col-md-8 col-md-offset-4 head">
			<h2> Explore your Neighborhood </h2>
			<h5> <i>...what tantalizing tastes await around the corner </i> </h5>
		</div>
	</div>
	
	<!-- Meal Info Samples -->
	
	<div class="row" style="margin-left: 2vw; margin-bottom: 4vh;">
		<div class="col-md-1" style="margin-left: -2.5vw;"> </div>
		<% meals.forEach( function (meal) { %>
		<% var host = meal.basicHostData() %>
		<div class="col-md-3 meal-info" data-id ="<%= host.get('id') %>" style="background-image: url('<%= meal.get("photo_url") %>'); margin-left: 20px;">
			<div class="row host-profile">
				<img src="<%= host.get('photo_url') %>" class= "host-pic">
				<span style="float: left; margin-left: 5px;">
					<%= host.get("name")%>'s
				</span>
			</div>
			<div class="row meal-blurb">
				<p class="tag"><%= meal.get("tag") %></p>
					<p> <%= meal.get("title") %> </p>
						<p style="font-size: 10px;">
							<span style="float: left; width: 100px;"> @<%= host.get('address') %> </span>
							<span style="float: right;">$<%= meal.get('price') %>/p </span>
						</p>
					</div>
			</div>
		
		<% }) %>
	</div>
		
</div>

<script>
$(function () {
  $('[data-toggle="tooltip"]').tooltip()
})
</script>